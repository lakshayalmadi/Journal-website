<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <form>
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" placeholder="Enter post title" name="postTitle">
        </div>
        <div class="form-group">
          <label>Author</label>
          <input type="text" class="form-control" placeholder="Enter your name" name="postAuthor">
        </div>
        <div class="form-group">
          <label>Post</label>
          <textarea name="postBody" class="form-control" name="" id="" cols="30" rows="10" placeholder="Enter your content here"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>
      </form>
</form>
<%- include("partials/footer"); -%>